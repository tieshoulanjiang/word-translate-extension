{
  "manifest_version": 3,
  "name": "Select Translate Popup",
  "version": "0.1.0",
  "description": "Select text → click logo → draggable & resizable translation popup on the current page.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://translation.googleapis.com/*",
    "https://libretranslate.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["panel.css"],
      "run_at": "document_idle",
      "all_frames": true

    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Select Translate Popup"
  }
}
